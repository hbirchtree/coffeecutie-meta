if(NOT NATIVE_LIBRARY_DIR)
    set ( NATIVE_LIBRARY_DIR "${NATIVE_LIBRARY_ROOT}/Android" CACHE PATH "" )
endif()

message ( "-- Native library directory: ${NATIVE_LIBRARY_DIR}" )


include_directories ( "@NATIVE_LIB_ROOT@/Android/include" )

# Required as of now
set ( COFFEE_BUILD_GLES ON CACHE BOOL "" )

# Does not work with Android as of yet
set ( COFFEE_BUILD_OPENSSL OFF  CACHE BOOL "" )
set ( COFFEE_BUILD_QT OFF  CACHE BOOL "" )
set ( COFFEE_BUILD_NECT OFF CACHE BOOL "" )
set ( COFFEE_BUILD_PCL OFF CACHE BOOL "" )

# Set specific options
set ( ANDROID_SDK "@ANDROID_SDK@" CACHE PATH "" )

set ( ENV{ANDROID_NDK} "@ANDROID_NDK@" CACHE PATH "" )
set ( ENV{ANDROID_TOOLCHAIN} "clang" CACHE STRING "" )
set ( ENV{ANDROID_STL} "c++_static" CACHE STRING "" )
set ( ENV{ANDROID_PLATFORM} "android-@ANDROID_API_LEVEL@" CACHE STRING "" )
set ( ENV{ANDROID_ABI} "@ANDROID_ABI@" CACHE STRING "" )

# Libraries
set ( SDL2_ANDROID_MAIN_FILE "@NATIVE_LIB_ROOT@/Android/src/SDL_android_main.c" CACHE FILEPATH "" )

set ( SDL2_INCLUDE_DIR "@NATIVE_LIB_ROOT@/Android/include/SDL2" CACHE PATH "" )
set ( OPENAL_INCLUDE_DIR "@NATIVE_LIB_ROOT@/Android/include/AL" CACHE PATH "" )

set ( SDL2_LIBRARY "@NATIVE_LIB_ROOT@/Android/@ANDROID_ABI@/libSDL2.a" CACHE FILEPATH "" )
set ( OPENAL_LIBRARY "@NATIVE_LIB_ROOT@/Android/@ANDROID_ABI@/libopenal.so" CACHE FILEPATH "" )
